<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PptKewarganegaraan">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/txtinklusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="20dp"
                android:text="PPT Kewarganegaraan"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txtinklusi"
                android:layout_margin="10dp"
                android:text="Minggu 1"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button1"
                android:layout_margin="10dp"
                android:text="Minggu 2"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button2"
                android:layout_margin="10dp"
                android:text="Minggu 3"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>


            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button3"
                android:layout_margin="10dp"
                android:text="Minggu 4"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button4"
                android:layout_margin="10dp"
                android:text="Minggu 5"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>


            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button5"
                android:layout_margin="10dp"
                android:text="Minggu 6"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button6"
                android:layout_margin="10dp"
                android:text="Minggu 7"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>


            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button7"
                android:layout_margin="10dp"
                android:text="Minggu 8"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/button8"
                android:layout_margin="10dp"
                android:text="Minggu 9"
                android:textColor="#ffff"
                android:background="@drawable/roundedstyle"
                android:backgroundTint="@color/blueDark"/>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>